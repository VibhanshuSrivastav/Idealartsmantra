<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Batch</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('../dashboard/dashboardHeader.ejs') %>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2 p-3">
                <%- include('../dashboard/left.ejs') %>
            </div>
            <div class="col-md-10 border border-1">

                <h2 class="text-center my-4">Add Batch</h2>
                <form action="/addBatch" method="post" class="p-4 bg-light border rounded">
                    <div class="mb-3">
                        <label for="batchNumber" class="form-label">Batch Number</label>
                        <input type="text" class="form-control" name="batchNumber" id="batchNumber" placeholder="Enter Batch number">
                    </div>
                    <div class="mb-3">
                        <label for="class" class="form-label">Class</label>
                        <select class="form-select" name="class" id="class">
                            <option selected disabled>Select Class</option>
                            <option value="9th">9th</option>
                            <option value="10th">10th</option>
                            <option value="11th">11th</option>
                            <option value="12th">12th</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="subject" class="form-label">Subject</label>
                        <select class="form-select" name="subject" id="subject">
                            <option selected disabled>Select Subject</option>
                            <option value="English">English</option>
                            <option value="SST">SST</option>
                            <option value="History">History</option>
                            <option value="Political">Political</option>
                            <option value="Geography">Geography</option>
                            <option value="Maths">Maths</option>
                            <option value="Physics">Physics</option>
                            <option value="Chemistry">Chemistry</option>
                            <option value="Biology">Biology</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="teacher" class="form-label">Teacher Name</label>
                        <input type="text" class="form-control" name="teacher" id="teacher" placeholder="Enter Teacher name">
                    </div>
                    <div class="mb-3">
                        <label for="time" class="form-label">Batch Time</label>
                        <input type="text" class="form-control" name="time" id="time" placeholder="Enter Batch Time">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>

                <!-- Table to display existing batch with edit and delete options -->
        <div class="mt-5">
            <h2 class="text-center my-4">Manage Books</h2>
            <table id="booksTable" class="table table-striped">
              <thead>
                <tr>
                  <th scope="col">Batch Number</th>
                  <th>Class</th>
                  <th>Subject</th>
                  <th>Teacher</th>
                  <th>Time</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% batches.forEach(batches => { %>
                  <tr>
                    <td><%= batches.batchNumber %></td>
                    <td><%= batches.class %></td>
                    <td><%= batches.subject %></td>
                    <td><%= batches.teacher %></td>
                    <td><%= batches.time %></td>
                    <td>
                      <a href="/deleteBatch/<%= batches._id %>" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
            </div>
        </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
