<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Notes</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body>
    <%- include('../dashboard/dashboardHeader.ejs')%>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2 p-3">
                <%- include ('../dashboard/left.ejs')%>
            </div>
            <div class="col-md-10 p-3">
                <h3 class="text-center my-4">Add Notes</h3>
                <form action="/addNotes" method="post" class="border border-1 p-4" enctype="multipart/form-data">
                    <select name="class" class="form-control my-2" id="class">
                        <option value="Select Class" disabled selected>Select Class</option>
                        <option value="9th">9th</option>
                        <option value="10th">10th</option>
                        <option value="11th">11th</option>
                        <option value="12th">12th</option>
                    </select>
                    <select name="subject" class="form-control my-2" id="subject">
                        <option value="Select Subject" disabled selected>Select Subject</option>
                        <option value="English">English</option>
                        <option value="SST">SST</option>
                        <option value="History">History</option>
                        <option value="Political">Political</option>
                        <option value="Geography">Geography</option>
                    </select>
                    <input type="file" name="notes" id="notes" class="form-control">
                    <input type="submit" value="Upload" class="my-2 btn btn-primary">
                </form>

                <!-- Table to display existing notes with edit and delete options -->
                <div class="mt-5">
                    <h3 class="text-center">Manage Notes</h3>
                    <table id="notesTable" class="table table-striped">
                        <thead>
                            <tr>
                                <th>Class</th>
                                <th>Subject</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% notes.forEach(note => { %>
                                <tr>
                                    <td><%= note.class %></td>
                                    <td><%= note.subject %></td>
                                    <td>
                                        <!-- <a href="/editNotes/<%= note._id %>" class="btn btn-sm btn-primary">Edit</a> -->
                                        <a href="/deleteNotes/<%= note._id %>" class="btn btn-sm btn-danger">Delete</a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Include Bootstrap JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Initialize DataTables -->
    <script>
        $(document).ready(function() {
            $('#notesTable').DataTable();
        });
    </script>
</body>
</html>
