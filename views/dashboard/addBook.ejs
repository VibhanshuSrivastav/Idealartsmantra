<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Book</title>

  <!-- Include necessary CSS and JavaScript libraries -->
  <link rel="stylesheet" href="https://cdn.datatables.net/2.0.5/css/dataTables.dataTables.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Include jQuery -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <!-- Include DataTables JavaScript -->
  <script src="https://cdn.datatables.net/2.0.5/js/dataTables.js"></script>

</head>

<body>

  <%- include('../dashboard/dashboardHeader.ejs')%>
  <div class="container-fluid">
    <div class="row">

      <div class="col-md-2 p-3">
        <%- include('../dashboard/left.ejs')%>
      </div>
      
      <div class="col-md-10">
        <h2 class="text-center my-4">Add Book</h2>
        <form action="/addBook" method="post" enctype="multipart/form-data" class="form-control">
            <select name="class" class="form-control my-2" id="class">
              <option value="" disabled selected>Select Class</option>
              <option value="9th">9th</option>
              <option value="10th">10th</option>
              <option value="11th">11th</option>
              <option value="12th">12th</option>
            </select>

            <select name="subject" class="form-control my-2" id="subject">
              <option value="" disabled selected>Select Subject</option>
              <option value="English">English</option>
              <option value="SST">SST</option>
              <option value="History">History</option>
              <option value="Political">Political</option>
              <option value="Geography">Geography</option>
            </select>

            <input type="text" class="form-control my-2" name="topicHeading" id="topicHeading" placeholder="Enter here the topic or the question">

            <input type="file" class="form-control my-2" name="topicImg" id="topicImg">
            
            <textarea class="form-control" name="topicExplaination" id="topicExplaination" rows="5" placeholder="Enter Explaination here"></textarea>

            <input class="btn btn-primary my-2" type="submit" value="Upload">
        </form>

        <!-- Table to display existing books with edit and delete options -->
        <div class="mt-5">
          <h2 class="text-center">Manage Books</h2>
          <table id="booksTable" class="table table-striped">
            <thead>
              <tr>
                <th>Class</th>
                <th>Subject</th>
                <th>Topic/Heading</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% books.forEach(book => { %>
                <tr>
                  <td><%= book.class %></td>
                  <td><%= book.subject %></td>
                  <td><%= book.topicHeading %></td>
                  <td>
                    <!-- <a href="/editBook/<%= book._id %>" class="btn btn-sm btn-primary">Edit</a> -->
                    <a href="/deleteBook/<%= book._id %>" class="btn btn-sm btn-danger">Delete</a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  
  
</body>
</html>


  <!-- Include Bootstrap JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <!-- Initialize DataTables -->
  <script>
    $(document).ready(function() {
      $('#booksTable').DataTable();
    });
  </script>