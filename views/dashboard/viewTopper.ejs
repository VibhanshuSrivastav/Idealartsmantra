<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Topper</title>


    <!-- <link rel="stylesheet" href="https://cdn.datatables.net/2.0.5/css/dataTables.dataTables.css">
    <script src="../assests/jquery.js"></script>
    <script src="https://cdn.datatables.net/2.0.5/js/dataTables.js"></script> -->

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


        <style>
            label{
                font-weight: bold;
            }
        </style>
</head>

<body>

    <%- include('../dashboard/dashboardHeader.ejs')%>
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-2 p-3">
                    <%- include('../dashboard/left.ejs')%>
                </div>

                <div class="col-md-10 p-3 border border-2  p-3 text-center ">

                    <h3 class="my-3">View Topper</h3>
                    <hr>

                    <div class="table-responsive" style="height:100vh;">
                        <% if(topperData.length>0){ %>
                          <table class="table table-striped text-center" id="dataTable">
                            <thead>
                              <tr>
                                <th>
                                  Topper Image
                                
                              </th>
                                <th>
                                    Topper Name
                                </th>
                                <th>
                                  Topper Class
                                </th>
                                <th>
                                  Topper Grade
                                </th>
                                <th>
                                    Actions
                                  </th>
                              </tr>
                            </thead>
              
                            <tbody>
              
                              <% for(var i=0; i<topperData.length; i++){ %>
                                <tr>
                                  
                                  <td>
                                    <a href="../uploads/toppers/<%= topperData[i].topperImg %>">
                                        <img src="../uploads/toppers/<%= topperData[i].topperImg%>" alt="" style="height:80px;">
                                      </a>
                                  </td>
                                  <td>
                                    <%= topperData[i].topperName%>
                                  </td>
                                  <td>
                                    <%= topperData[i].topperClass %>
                                  </td>
                                  <td>
                                    <%= topperData[i].topperGrade %>
                                  </td>
                                  <td>
                                    <a href="/deleteTopper/<%= topperData[i]._id%>" class="btn btn-danger">Delete</a>

                                    <!-- <a href="#" class="btn btn-success ">Edit</a> -->
                                  </td>
                                </tr>
                                <% } %>
              
                            </tbody>
                          </table>
              
                          <% } else{ %>
                            Topper Data not found
                            <% } %>
                      </div>
                </div>

                
              

            </div>

        </div>

</body>

</html>